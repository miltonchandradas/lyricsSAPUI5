<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<ResponsivePopover title="Lyrics" class="sapUiPopupWithPadding" placement="Left">
		<beginButton>
			<Button text="Close" press=".onLyricsPopoverClose"/>
		</beginButton>
		<content>
			<VBox>
				<Label design="Bold" text="Lyrics - {selectedSongModel>/song} by {selectedSongModel>/artist}"/>
				<Text text="{ path: 'selectedSongModel>/lyrics'}" class="sapUiSmallMarginBottom"/>
				
			</VBox>
		</content>
	</ResponsivePopover>
</core:FragmentDefinition>